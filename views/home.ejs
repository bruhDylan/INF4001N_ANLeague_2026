                <div class="matches-section">
                    <div class="section-header">
                        <span>Tournament Statistics</span>
                    </div>

                    <div class="stats-grid" id="statsSection">
                        <div class="stat-card">
                            <div class="stat-icon">ü•Ö</div>
                            <h3>Top Goal Scorer</h3>
                            <div id="topScorerContent">
                                <div class="no-matches">
                                    <div class="no-matches-icon">‚öΩ</div>
                                    <p>No goals scored yet</p>
                                </div>
                            </div>
                        </div>

                        <div class="stat-card">
                            <div class="stat-icon">üèÜ</div>
                            <h3>Best Performing Team</h3>
                            <div id="bestTeamContent">
                                <div class="no-matches">
                                    <div class="no-matches-icon">üèÖ</div>
                                    <p>No matches played yet</p>
                                </div>
                            </div>
                        </div>

                        <div class="stat-card">
                            <div class="stat-icon">üìà</div>
                            <h3>Tournament Stats</h3>
                            <div id="tournamentStatsContent">
                                <div class="no-matches">
                                    <div class="no-matches-icon">üìä</div>
                                    <p>No tournament data</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        let currentTab = 'upcoming';
        let matchesData = [];
        let teamsData = [];

        // Load tournament data
        async function loadTournamentData() {
            try {
                const response = await fetch('/api/admin/dashboard-data');
                const data = await response.json();

                if (data.success) {
                    matchesData = data.matches || [];
                    teamsData = data.teams || [];
                    updateFeaturedMatch(data.tournament);
                    updateMatchesList();
                    updateStats();
                }
            } catch (error) {
                console.error('Error loading tournament data:', error);
            }
        }

        // Update featured match section
        function updateFeaturedMatch(tournament) {
            const statusElement = document.getElementById('tournamentStatus');
            const titleElement = document.getElementById('featuredMatchTitle');
            const dateElement = document.getElementById('featuredMatchDate');
            const teamsElement = document.getElementById('featuredTeams');

            if (tournament.status === 'not_started') {
                statusElement.textContent = 'TOURNAMENT NOT STARTED';
                statusElement.style.background = '#6c757d';
                titleElement.textContent = 'African Nations League';
                dateElement.textContent = 'Waiting for tournament to begin...';
                teamsElement.innerHTML = `
                    <div class="team">
                        <div class="team-flag">üåç</div>
                        <div class="team-name">African Nations</div>
                    </div>
                    <div class="vs">vs</div>
                    <div class="team">
                        <div class="team-flag">‚öΩ</div>
                        <div class="team-name">Football Excellence</div>
                    </div>
                `;
            } else {
                statusElement.textContent = tournament.status.toUpperCase();
                statusElement.style.background = '#ffd700';
                titleElement.textContent = 'African Nations League - ' + tournament.status.charAt(0).toUpperCase() + tournament.status.slice(1);
                dateElement.textContent = 'Tournament in Progress - ' + tournament.totalTeams + ' Teams';
                
                // Show next scheduled match if available
                const nextMatch = matchesData.find(match => match.status === 'scheduled');
                if (nextMatch) {
                    teamsElement.innerHTML = `
                        <div class="team">
                            <div class="team-flag">${getFlagEmoji(nextMatch.team1Name)}</div>
                            <div class="team-name">${nextMatch.team1Name}</div>
                        </div>
                        <div class="vs">vs</div>
                        <div class="team">
                            <div class="team-flag">${getFlagEmoji(nextMatch.team2Name)}</div>
                            <div class="team-name">${nextMatch.team2Name}</div>
                        </div>
                    `;
                }
            }
        }

        // Update matches list
        function updateMatchesList() {
            const matchesContent = document.getElementById('matchesContent');
            
            if (matchesData.length === 0) {
                matchesContent.innerHTML = `
                    <div class="no-matches">
                        <div class="no-matches-icon">‚öΩ</div>
                        <h3>No Tournament Started</h3>
                        <p>Waiting for admin to start the African Nations League tournament...</p>
                    </div>
                `;
                return;
            }

            const filteredMatches = matchesData.filter(match => 
                currentTab === 'upcoming' ? match.status === 'scheduled' : match.status === 'completed'
            );

            if (filteredMatches.length === 0) {
                matchesContent.innerHTML = `
                    <div class="no-matches">
                        <div class="no-matches-icon">${currentTab === 'upcoming' ? 'üìÖ' : '‚úÖ'}</div>
                        <h3>No ${currentTab === 'upcoming' ? 'Upcoming' : 'Completed'} Matches</h3>
                        <p>${currentTab === 'upcoming' ? 'All matches have been played or tournament not started' : 'No matches completed yet'}</p>
                    </div>
                `;
                return;
            }

            matchesContent.innerHTML = `
                <table class="matches-table">
                    <tbody>
                        ${filteredMatches.map(match => `
                            <tr>
                                <td>
                                    <div class="match-team">
                                        <div class="match-flag">${getFlagEmoji(match.team1Name)}</div>
                                        <span>${match.team1Name}</span>
                                    </div>
                                </td>
                                <td class="match-score">
                                    ${match.status === 'completed' ? `${match.team1Score || 0} - ${match.team2Score || 0}` : 'VS'}
                                </td>
                                <td>
                                    <div class="match-team">
                                        <span>${match.team2Name}</span>
                                        <div class="match-flag">${getFlagEmoji(match.team2Name)}</div>
                                    </div>
                                </td>
                                <td>
                                    <div class="match-status ${match.status}">
                                        ${match.status === 'scheduled' ? 'UPCOMING' : 'COMPLETED'}
                                    </div>
                                </td>
                                <td class="match-round">${match.round}</td>
                                <td>
                                    ${match.status === 'completed' && match.winner ? 
                                        `<div style="color: #ffd700; font-weight: 600;">${match.winner}</div>` : 
                                        '<div style="color: #888;">-</div>'
                                    }
                                </td>
                            </tr>
                        `).join('')}
                    </tbody>
                </table>
            `;
        }

        // Update stats section
        function updateStats() {
            updateTopScorer();
            updateBestTeam();
            updateTournamentStats();
        }

        function updateTopScorer() {
            const topScorerContent = document.getElementById('topScorerContent');
            
            // Extract goal scorers from all matches
            const goalScorers = [];
            const scorerMap = new Map();

            matchesData.forEach(match => {
                if (match.goalScorers && Array.isArray(match.goalScorers)) {
                    match.goalScorers.forEach(goal => {
                        if (goal.scorer && goal.scorer !== 'Player') {
                            if (scorerMap.has(goal.scorer)) {
                                scorerMap.set(goal.scorer, scorerMap.get(goal.scorer) + 1);
                            } else {
                                scorerMap.set(goal.scorer, 1);
                            }
                        }
                    });
                }
            });

            // Convert to array and sort by goals
            const sortedScorers = Array.from(scorerMap.entries())
                .map(([name, goals]) => ({ name, goals, team: getPlayerTeam(name) }))
                .sort((a, b) => b.goals - a.goals);

            if (sortedScorers.length === 0) {
                topScorerContent.innerHTML = `
                    <div class="stat-details">
                        <p>No goals scored yet</p>
                    </div>
                `;
                return;
            }

            const topScorer = sortedScorers[0];
            topScorerContent.innerHTML = `
                <div class="stat-value">${topScorer.goals}</div>
                <div class="stat-details">
                    <span class="player-name">${topScorer.name}</span><br>
                    <span>${topScorer.team}</span>
                </div>
            `;
        }

        function updateBestTeam() {
            const bestTeamContent = document.getElementById('bestTeamContent');
            const completedMatches = matchesData.filter(m => m.status === 'completed');
            
            if (completedMatches.length === 0) {
                bestTeamContent.innerHTML = `
                    <div class="stat-details">
                        <p>No matches played yet</p>
                    </div>
                `;
                return;
            }

            // Calculate team wins
            const teamWins = {};
            completedMatches.forEach(match => {
                if (match.winner) {
                    teamWins[match.winner] = (teamWins[match.winner] || 0) + 1;
                }
            });

            // Find team with most wins
            const bestTeam = Object.entries(teamWins).reduce((best, [team, wins]) => {
                return wins > best.wins ? { team, wins } : best;
            }, { team: '', wins: 0 });

            if (bestTeam.team) {
                bestTeamContent.innerHTML = `
                    <div class="stat-value">${bestTeam.wins}</div>
                    <div class="stat-details">
                        <span class="team-name">${bestTeam.team}</span><br>
                        <span>Wins in tournament</span>
                    </div>
                `;
            } else {
                bestTeamContent.innerHTML = `
                    <div class="stat-details">
                        <p>No clear leader yet</p>
                    </div>
                `;
            }
        }

        function updateTournamentStats() {
            const tournamentStatsContent = document.getElementById('tournamentStatsContent');
            const completedMatches = matchesData.filter(m => m.status === 'completed');
            
            // Calculate total goals from goal scorers
            let totalGoals = 0;
            matchesData.forEach(match => {
                if (match.goalScorers && Array.isArray(match.goalScorers)) {
                    totalGoals += match.goalScorers.length;
                }
            });
            
            tournamentStatsContent.innerHTML = `
                <div class="stat-details">
                    <div style="margin-bottom: 10px;">
                        <strong>Matches Played:</strong> ${completedMatches.length}
                    </div>
                    <div style="margin-bottom: 10px;">
                        <strong>Total Goals:</strong> <span class="goals-count">${totalGoals}</span>
                    </div>
                    <div>
                        <strong>Teams Competing:</strong> ${teamsData.length}
                    </div>
                </div>
            `;
        }

        // Helper to get player team from goal data
        function getPlayerTeam(playerName) {
            for (const match of matchesData) {
                if (match.goalScorers && Array.isArray(match.goalScorers)) {
                    const goal = match.goalScorers.find(g => g.scorer === playerName);
                    if (goal) {
                        return goal.team;
                    }
                }
            }
            return 'Unknown Team';
        }

        // Tab switching
        function showTab(tabName) {
            currentTab = tabName;
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            event.target.classList.add('active');
