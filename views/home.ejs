                    <div class="teams-container" id="featuredTeams">
                        <div class="team">
                            <div class="team-flag">üåç</div>
                            <div class="team-name">African Nations</div>
                        </div>
                        <div class="vs">vs</div>
                        <div class="team">
                            <div class="team-flag">‚öΩ</div>
                            <div class="team-name">Football Excellence</div>
                        </div>
                    </div>
                </div>

                <!-- Upcoming Matches Section -->
                <div class="matches-section">
                    <div class="section-header">
                        <span>Tournament Matches</span>
                    </div>

                    <div class="tabs-container">
                        <a href="#" class="tab active" onclick="showTab('upcoming')">Upcoming Matches</a>
                        <a href="#" class="tab" onclick="showTab('completed')">Completed Matches</a>
                    </div>

                    <div id="matchesContent">
                        <div class="no-matches">
                            <div class="no-matches-icon">‚öΩ</div>
