        <!-- Header -->
        <div class="header">
            <div>
                <div class="title">African Nations League</div>
                <div class="title-sub">Home of African Football Excellence</div>
            </div>
            <a href="/bracket" class="view-tournament">View Tournament</a>
        </div>

        <!-- Main Section -->
        <div class="main-section">
            <div class="background-text">ANL</div>
            
            <div class="content">
                <!-- Hero Section -->
                <div class="hero-section">
                    <h1 class="hero-title">African Nations League</h1>
                    <p class="hero-subtitle">Experience the future of African football with our revolutionary tournament simulation platform</p>
                    <div class="btn-group">
                        <a href="/signup" class="btn btn-primary">Create Your Team</a>
